<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GUI.ViewModels.EntityViewModels"
             xmlns:entities="using:MechanicalCataphract.Data.Entities"
             xmlns:collections="using:System.Collections.Generic"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:Class="GUI.Views.FactionDetail"
             x:DataType="vm:FactionViewModel">

    <StackPanel Spacing="8" Margin="5">
        <!-- Name -->
        <StackPanel>
            <TextBlock Text="Name" FontWeight="SemiBold" FontSize="11"/>
            <TextBox Text="{Binding Name, Mode=TwoWay}"
                     Watermark="Faction name"/>
        </StackPanel>

        <!-- Color picker -->
        <StackPanel>
            <TextBlock Text="Color" FontWeight="SemiBold" FontSize="11"/>
            <ColorPicker Color="{Binding FactionColor, Mode=TwoWay}"
                         HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- IsPlayerFaction -->
        <CheckBox Content="Player Faction"
                  IsChecked="{Binding IsPlayerFaction, Mode=TwoWay}"/>

        <!-- Rules (multiline) -->
        <StackPanel>
            <TextBlock Text="Rules" FontWeight="SemiBold" FontSize="11"/>
            <TextBox Text="{Binding Rules, Mode=TwoWay}"
                     Watermark="Special rules for this faction..."
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     MinHeight="60"
                     MaxHeight="120"/>
        </StackPanel>

         <!-- Armies section -->
         <Border BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="0,8,0,0" Margin="0,8,0,0">
             <StackPanel Spacing="5">
                 <TextBlock Text="Armies" FontWeight="Bold" FontSize="12"/>

                 <ItemsControl ItemsSource="{Binding Armies}">
                     <ItemsControl.ItemTemplate>
                         <DataTemplate x:DataType="entities:Army">
                             <Button Classes="link"
                                     Content="{Binding Name}"
                                     Command="{Binding
         $parent[UserControl].((vm:FactionViewModel)DataContext).SelectArmyCommand}"
                                     CommandParameter="{Binding}"
                                     Padding="2" Margin="0,1"/>
                         </DataTemplate>
                     </ItemsControl.ItemTemplate>
                 </ItemsControl>

                 <TextBlock Text="(No armies)"
                            IsVisible="{Binding !Armies.Count}"
                            Foreground="Gray" FontStyle="Italic" FontSize="11"/>
             </StackPanel>
         </Border>

         <!-- Commanders section -->
         <Border BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="0,8,0,0" Margin="0,5,0,0">
             <StackPanel Spacing="5">
                 <TextBlock Text="Commanders" FontWeight="Bold" FontSize="12"/>

                 <ItemsControl ItemsSource="{Binding Commanders}">
                     <ItemsControl.ItemTemplate>
                         <DataTemplate x:DataType="entities:Commander">
                             <Button Classes="link"
                                     Content="{Binding Name}"
                                     Command="{Binding
         $parent[UserControl].((vm:FactionViewModel)DataContext).SelectCommanderCommand}"
                                     CommandParameter="{Binding}"
                                     Padding="2" Margin="0,1"/>
                         </DataTemplate>
                     </ItemsControl.ItemTemplate>
                 </ItemsControl>

                 <TextBlock Text="(No commanders)"
                            IsVisible="{Binding !Commanders.Count}"
                            Foreground="Gray" FontStyle="Italic" FontSize="11"/>
             </StackPanel>
         </Border>

         <!-- Game Rules section -->
         <Border BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="0,8,0,0" Margin="0,5,0,0">
             <StackPanel Spacing="5">
                 <TextBlock Text="Game Rules" FontWeight="Bold" FontSize="12"/>
                 <TextBlock Text="Per-faction mechanical overrides (editable by referees)."
                            FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>

                 <DataGrid ItemsSource="{Binding FactionRules}"
                           AutoGenerateColumns="False"
                           CanUserResizeColumns="True"
                           CanUserReorderColumns="False"
                           GridLinesVisibility="Horizontal"
                           HeadersVisibility="Column"
                           IsReadOnly="False"
                           MaxHeight="180">
                     <DataGrid.Columns>
                         <!-- Rule key column: ComboBox bound to AvailableRuleKeys on parent VM -->
                         <DataGridTemplateColumn Header="Rule" Width="*">
                             <DataGridTemplateColumn.CellTemplate>
                                 <DataTemplate x:DataType="vm:FactionRuleViewModel">
                                     <TextBlock Text="{Binding RuleKey}" VerticalAlignment="Center" Margin="4,0"/>
                                 </DataTemplate>
                             </DataGridTemplateColumn.CellTemplate>
                             <DataGridTemplateColumn.CellEditingTemplate>
                                 <DataTemplate x:DataType="vm:FactionRuleViewModel">
                                     <ComboBox SelectedItem="{Binding RuleKey, Mode=TwoWay}"
                                               ItemsSource="{Binding $parent[UserControl].((vm:FactionViewModel)DataContext).AvailableRuleKeys}"
                                               HorizontalAlignment="Stretch"/>
                                 </DataTemplate>
                             </DataGridTemplateColumn.CellEditingTemplate>
                         </DataGridTemplateColumn>

                         <!-- Value column -->
                         <DataGridTextColumn Header="Value"
                                             Binding="{Binding Value}"
                                             Width="80"/>

                         <!-- Remove button column -->
                         <DataGridTemplateColumn Header="" Width="36">
                             <DataGridTemplateColumn.CellTemplate>
                                 <DataTemplate x:DataType="vm:FactionRuleViewModel">
                                     <Button Content="âœ•"
                                             FontSize="10"
                                             Padding="2"
                                             Command="{Binding $parent[UserControl].((vm:FactionViewModel)DataContext).RemoveFactionRuleCommand}"
                                             CommandParameter="{Binding}"/>
                                 </DataTemplate>
                             </DataGridTemplateColumn.CellTemplate>
                         </DataGridTemplateColumn>
                     </DataGrid.Columns>
                 </DataGrid>

                 <TextBlock Text="(No game rules)"
                            IsVisible="{Binding !FactionRules.Count}"
                            Foreground="Gray" FontStyle="Italic" FontSize="11"/>

                 <Button Content="+ Add Rule"
                         Command="{Binding AddFactionRuleCommand}"
                         Padding="6,2"
                         HorizontalAlignment="Left"/>
             </StackPanel>
         </Border>
    </StackPanel>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GUI.ViewModels.EntityViewModels"
             xmlns:entities="using:MechanicalCataphract.Data.Entities"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
             x:Class="GUI.Views.CommanderDetail"
             x:DataType="vm:CommanderViewModel">

    <StackPanel Spacing="8" Margin="5">
        <!-- Name -->
        <StackPanel>
            <TextBlock Text="Name" FontWeight="SemiBold" FontSize="11"/>
            <TextBox Text="{Binding Name, Mode=TwoWay}"
                     Watermark="Commander name"/>
        </StackPanel>

        <!-- Age -->
        <StackPanel>
            <TextBlock Text="Age" FontWeight="SemiBold" FontSize="11"/>
            <NumericUpDown Value="{Binding Age, Mode=TwoWay}"
                           Minimum="16" Maximum="100" Increment="1"/>
        </StackPanel>

        <!-- Discord Handle -->
        <StackPanel>
            <TextBlock Text="Discord Handle" FontWeight="SemiBold" FontSize="11"/>
            <TextBox Text="{Binding DiscordHandle, Mode=TwoWay}"
                     Watermark="@username"/>
        </StackPanel>

        <!-- Current Location -->
        <StackPanel Spacing="2">
            <TextBlock Text="Current Location" FontWeight="SemiBold" FontSize="11"/>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Col" FontSize="10" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Row" FontSize="10" Foreground="Gray"/>
                <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Col, Mode=TwoWay}" Margin="0,0,2,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Row, Mode=TwoWay}" Margin="2,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Target Location -->
        <StackPanel Spacing="2">
            <TextBlock Text="Target Location" FontWeight="SemiBold" FontSize="11"/>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Col" FontSize="10" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Row" FontSize="10" Foreground="Gray"/>
                <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding TargetCol, Mode=TwoWay}" Margin="0,0,2,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TargetRow, Mode=TwoWay}" Margin="2,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Path Selection -->
        <StackPanel Spacing="4">
            <!-- Path controls when NOT in selection mode -->
            <StackPanel Spacing="4" IsVisible="{Binding !IsPathSelectionActive}">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Button Content="Compute Path"
                            Command="{Binding ComputePathCommand}"
                            ToolTip.Tip="Auto-compute path from current to target location"/>
                    <Button Content="Select Path"
                            Command="{Binding SelectPathCommand}"
                            ToolTip.Tip="Manually select path by clicking hexes"/>
                </StackPanel>
                <TextBlock Text="{Binding PathLength, StringFormat='Path: {0} hexes'}"
                           FontSize="11" Foreground="Gray"/>
                <TextBlock Text="{Binding PathComputeStatus}"
                           FontSize="10" Foreground="Orange"
                           TextWrapping="Wrap"
                           IsVisible="{Binding PathComputeStatus, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
            </StackPanel>

            <!-- Show selection controls when IN selection mode -->
            <Border BorderBrush="Cyan" BorderThickness="1" CornerRadius="3" Padding="8"
                    IsVisible="{Binding IsPathSelectionActive}">
                <StackPanel Spacing="5">
                    <TextBlock Text="Click adjacent hexes on map" FontStyle="Italic" FontSize="11"/>
                    <TextBlock Text="{Binding PathSelectionCount, StringFormat='{}{0} hex(es) selected'}"
                               Foreground="Cyan" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Button Content="Confirm"
                                Command="{Binding ConfirmPathSelectionCommand}"
                                Background="Green" Foreground="White"/>
                        <Button Content="Cancel"
                                Command="{Binding CancelPathSelectionCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Faction -->
        <StackPanel Orientation="Horizontal" Spacing="5">
            <TextBlock Text="Faction:" FontWeight="SemiBold" FontSize="11"/>
            <ComboBox ItemsSource="{Binding AvailableFactions}"
                      SelectedItem="{Binding Faction, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="entities:Faction">
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- Following Army -->
        <StackPanel Margin="0,5,0,0">
            <TextBlock Text="Following Army" FontWeight="SemiBold" FontSize="11"/>
            <Grid ColumnDefinitions="*,Auto">
                <ComboBox Grid.Column="0"
                          ItemsSource="{Binding AvailableArmies}"
                          SelectedItem="{Binding FollowingArmy, Mode=TwoWay}"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="entities:Army">
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Grid.Column="1" Content="&#x2715;" FontSize="10" Padding="4,2"
                        Command="{Binding ClearFollowingArmyCommand}"
                        ToolTip.Tip="Stop following army"
                        Margin="4,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Stats (read-only) -->
        <Border BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="0,8,0,0" Margin="0,5,0,0">
            <StackPanel Spacing="3">
                <TextBlock FontSize="11" Foreground="Gray">
                    <Run Text="Commands "/>
                    <Run Text="{Binding Entity.CommandedArmies.Count, FallbackValue=0}"/>
                    <Run Text=" armies"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GUI.ViewModels.EntityViewModels"
             xmlns:entities="using:MechanicalCataphract.Data.Entities"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:Class="GUI.Views.CoLocationChannelDetail"
             x:DataType="vm:CoLocationChannelViewModel">

    <StackPanel Spacing="8" Margin="5">
        <!-- Name -->
        <StackPanel>
            <TextBlock Text="Name" FontWeight="SemiBold" FontSize="11"/>
            <TextBox Text="{Binding Name, Mode=TwoWay}"
                     Watermark="Channel name"/>
        </StackPanel>

        <!-- Following Army -->
        <StackPanel Margin="0,5,0,0">
            <TextBlock Text="Following Army" FontWeight="SemiBold" FontSize="11"/>
            <Grid ColumnDefinitions="*,Auto">
                <ComboBox Grid.Column="0"
                          ItemsSource="{Binding AvailableArmies}"
                          SelectedItem="{Binding FollowingArmy, Mode=TwoWay}"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="entities:Army">
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Grid.Column="1" Content="&#x2715;" FontSize="10" Padding="4,2"
                        Command="{Binding ClearFollowingArmyCommand}"
                        ToolTip.Tip="Stop following army"
                        Margin="4,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- OR: Following Hex Location -->
        <StackPanel Spacing="2">
            <TextBlock Text="— or Following Hex —" FontSize="10" Foreground="Gray"
                       HorizontalAlignment="Center"/>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Col" FontSize="10" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Row" FontSize="10" Foreground="Gray"/>
                <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding FollowingCol, Mode=TwoWay}" Margin="0,0,2,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FollowingRow, Mode=TwoWay}" Margin="2,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Assigned Commanders -->
        <Border BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="0,8,0,0" Margin="0,5,0,0">
            <StackPanel Spacing="5">
                <TextBlock Text="{Binding CommanderCount, StringFormat='Assigned Commanders ({0})'}"
                           FontWeight="SemiBold" FontSize="11"/>

                <ItemsControl ItemsSource="{Binding Commanders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="entities:Commander">
                            <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                <TextBlock Grid.Column="0" Text="{Binding Name}"
                                           VerticalAlignment="Center" FontSize="11"/>
                                <Button Grid.Column="1" Content="&#x2715;" FontSize="10" Padding="4,2"
                                        Command="{Binding $parent[ItemsControl].((vm:CoLocationChannelViewModel)DataContext).RemoveCommanderCommand}"
                                        CommandParameter="{Binding}"
                                        ToolTip.Tip="Remove from channel"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Add Commander -->
                <Grid ColumnDefinitions="*,Auto" Margin="0,4,0,0">
                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding AvailableCommanders}"
                              SelectedItem="{Binding SelectedCommanderToAdd, Mode=TwoWay}"
                              HorizontalAlignment="Stretch">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="entities:Commander">
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Grid.Column="1" Content="+ Add" FontSize="10" Padding="6,2"
                            Command="{Binding AddCommanderCommand}"
                            Margin="4,0,0,0"/>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
